---
import AstroIcon from '@components/icons/AstroIcon.astro';
import Java from '@components/icons/Java.astro';
import JavaScript from '@components/icons/JavaScript.astro';
import Kotlin from '@components/icons/Kotlin.astro';
import MySql from '@components/icons/MySql.astro';
import NodeJs from '@components/icons/NodeJs.astro';
import Php from '@components/icons/Php.astro';
import PostgreSql from '@components/icons/PostgreSql.astro';
import Python from '@components/icons/Python.astro';
import Svelte from '@components/icons/Svelte.astro';
import Tailwind from '@components/icons/Tailwind.astro';
import TypeScript from '@components/icons/TypeScript.astro';
import Supabase from '@components/icons/Supabase.astro';
import Html from './icons/Html.astro';
import Css from './icons/Css.astro';
import React from './icons/React.astro';
import NextJs from './icons/NextJs.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;

const icons = {
  astro: AstroIcon,
  svelte: Svelte,
  typescript: TypeScript,
  tailwind: Tailwind,
  javascript: JavaScript,
  java: Java,
  mysql: MySql,
  postgresql: PostgreSql,
  python: Python,
  kotlin: Kotlin,
  php: Php,
  node: NodeJs,
  supabase: Supabase,
  html: Html,
  css: Css,
  react: React,
  nextjs: NextJs
};

const Icon = icons[title.toLowerCase().split(' ')[0] as keyof typeof icons];
---

<li
  class="relative text-nowrap text-xs px-2.5 py-1 border-surface rounded-full dark:border-surface-dark border-x-2 flex items-center gap-1.5"
>
  {Icon && <Icon class="size-4" />}
  {title}
</li>
